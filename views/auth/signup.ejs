<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="Content-Language" content="en">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Signup &mdash; Architect Messenger </title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1,
            user-scalable=no, shrink-to-fit=no" />
    <meta name="SMS Application" content="This is system for sending bulk
            sms to clients">
    <meta name="msapplication-tap-highlight" content="no">

    <link href="../main.css" rel="stylesheet">
    <link rel="icon" type="image/png" href="../favi.png" sizes="32x32">
    <!-- IZITOAST Libraries -->
    <link rel="stylesheet" href="../assets/izitoast/css/iziToast.min.css">
</head>

<body>
    <div class="app-container app-theme-white body-tabs-shadow fixed-sidebar
            fixed-header">
        <div class="app-main">
            <div class="app-main__outer">
                <div class="app-main__inner">
                    <div class="app-page-title">
                        <div class="page-title-wrapper">
                            <div class="page-title-heading">
                                <div class="page-title-icon">
                                    <i class="pe-7s-key icon-gradient
                                            bg-mean-fruit">
                                    </i>
                                </div>
                                <div>
                                    <h1>Architect Messenger</h1>
                                    <div class="page-title-subheading">Signup
                                        to start a session
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-xl-6">
                            <div class="main-card mb-3 card" style="padding: 20px;">
                                <center><img src="../assets/images/login.png" width="60%" alt=""></center>
                            </div>

                        </div>

                        <div class="col-md-6 col-xl-6">
                            <div class="main-card mb-3 card">
                                <div class="card-body">
                                    <h5 class="card-title">Signup</h5>
                                    <div>
                                        <form action="/signup" method="post">
                                            Name
                                            <div class="input-group">
                                                <div class="input-group-prepend"><span class="input-group-text"><i
                                                            class="fa fa-user
                                                            icon-gradient
                                                            bg-mean-fruit
                                                            fa-w-6"></i></span>
                                                </div>
                                                <input placeholder="First Name" type="text" name="firstname"
                                                    class="form-control" required> &nbsp;
                                                <input placeholder="Last Name" type="text" name="lastname"
                                                    class="form-control" required>
                                            </div>
                                            <br>
                                            Email
                                            <div class="input-group">
                                                <div class="input-group-prepend"><span class="input-group-text"><i
                                                            class="fa fa-user
                                                            icon-gradient
                                                            bg-mean-fruit
                                                            fa-w-6"></i></span>
                                                </div>
                                                <input placeholder="Email" type="email" name="email"
                                                    class="form-control" required>
                                            </div>
                                            <br>
                                            Password
                                            <div class="input-group">
                                                <div class="input-group-prepend"><span class="input-group-text"><i
                                                            class="fa fa-key
                                                            icon-gradient
                                                            bg-mean-fruit
                                                            fa-w-6"></i></span>
                                                </div>
                                                <input placeholder="Password" type="password" name="password"
                                                    class="form-control" required> &nbsp; <input
                                                    placeholder="Confirm Password" type="password"
                                                    name="confirmpassword" class="form-control" required>
                                            </div>
                                            <br>
                                            <div class="input-group">
                                                <button type="submit" class="mb-2 mr-2 btn
                                                    btn-primary btn-lg btn-block">
                                                    Signup
                                                </button>
                                            </div>
                                            <!-- <br> -->
                                            <div class="input-group">
                                                Already have an account? &nbsp; <a href="/"> Login</a>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
                <div class="app-wrapper-footer">
                    <div class="app-footer">
                        <div class="app-footer__inner">
                            <div class="app-footer-left">
                                <ul class="nav">
                                    <li class="nav-item">
                                        <a href="https://architect-messenger.herokuapp.com" class="nav-link">
                                            Architect Messenger
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link">
                                            Copyright &copy;
                                            <script> document.write(new Date().getFullYear());</script>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                            <div class="app-footer-right">
                                <ul class="nav">
                                    <li class="nav-item">
                                        <a href="https://maverick-edifice.herokuapp.com" target="_blank"
                                            class="nav-link">
                                            <div class="badge badge-success
                                                    mr-1 ml-0">
                                                <small>Powered By:</small>
                                            </div>
                                            Maverick Edifice
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <script src="http://maps.google.com/maps/api/js?sensor=true"></script>
        </div>
    </div>
    <script type="text/javascript" src="../assets/scripts/main.js"></script>

    <!-- IZITOAST -->
    <script src="../assets/izitoast/js/iziToast.min.js"></script>

    <% if(typeof errors != 'undefined') { %>
    <% errors.forEach(function(error) { %>
    <script>
        var notify = new Audio('../assets/sounds/notify.mp3');
        notify.play();
        iziToast.error({ title: 'Error!', message: `<%= error.msg %>`, position: 'topRight' })
    </script>
    <% }); %>
    <% } %>
    <% if(error_msg != '') { %>
    <script>
        var notify = new Audio('../assets/sounds/notify.mp3');
        notify.play();
        iziToast.info({ title: 'Info!', message: `<%= error_msg %>`, position: 'topRight' })
    </script>
    <% } %>
    <% if(success_msg != '') { %>
    <script>
        var notify = new Audio('../assets/sounds/notify.mp3');
        notify.play();
        iziToast.info({ title: 'Info!', message: `<%= success_msg %>`, position: 'topRight' })
    </script>
    <% } %>
</body>

</html>